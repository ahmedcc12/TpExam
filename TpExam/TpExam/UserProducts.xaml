<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpExam.UserProducts">
    <ContentPage.Content>
        <StackLayout>
            <!-- Add a ListView to display products -->
            <!-- Add a ListView to display products -->
            <ListView x:Name="ProductsListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand">
                                <!-- Display the product details -->
                                <StackLayout>
                                    <Label Text="{Binding Nom}" FontAttributes="Bold" />
                                    <Label Text="{Binding Description}" />
                                    <Label Text="{Binding Prix, StringFormat='Price: {0:C}'}" />
                                </StackLayout>

                                <!-- Add to Cart button -->
                                <Button Text="Add to Cart" Clicked="AddToCartButton_Clicked" CommandParameter="{Binding .}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
