<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpExam.AddToCartPage">

    <ContentPage.Content>
        <StackLayout Padding="20" BackgroundColor="#FFFFFF">
            <!-- Product Details Section -->
            <StackLayout Margin="0,0,0,20">
                <Label Text="Product Details" FontSize="20" FontAttributes="Bold" TextColor="#333333" />
                <Label x:Name="ProductNameLabel" FontSize="18" FontAttributes="Bold" TextColor="#007BFF" />
                <Label x:Name="DescriptionLabel" FontSize="16" TextColor="#555555" />
                <Label x:Name="PriceLabel" FontSize="16" TextColor="#555555" />
            </StackLayout>

            <!-- Quantity Entry Section -->
            <StackLayout Margin="0,0,0,20">
                <Label Text="Enter Quantity" FontSize="20" FontAttributes="Bold" TextColor="#333333" />
                <Entry x:Name="QuantityEntry" Placeholder="Quantity" Keyboard="Numeric" FontSize="16" />
            </StackLayout>

            <!-- Add to Cart Button -->
            <Button Text="Add to Cart" Clicked="AddToCartButton_Clicked" BackgroundColor="#007BFF" TextColor="#FFFFFF" FontSize="18" CornerRadius="8" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
