<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TpExam.UpdateCategoryPage">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Entry x:Name="UpdatedCategoryName" Placeholder="Enter updated category name" BackgroundColor="#ecf0f1" Margin="0,0,0,20" />
            <Button Text="Update" Clicked="UpdateButton_Clicked" BackgroundColor="#3498db" TextColor="White" CornerRadius="5" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
